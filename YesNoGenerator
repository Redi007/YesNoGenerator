        }

        @keyframes nodePulse {
            0% { transform: scale(1); box-shadow: 0 0 10px var(--primary); }
            100% { transform: scale(1.5); box-shadow: 0 0 20px var(--primary); }
        }

        .star {
            position: absolute;
            width: 2px;
            height: 2px;
            background: white;
            animation: starTwinkle 3s infinite;

            font-family: 'Courier New', monospace;
            overflow: hidden;
        }

        .theme-picker {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1000;
        }

        select {
            background: rgba(255, 255, 255, 0.1);
            color: var(--text);
            border: 1px solid var(--primary);
            padding: 5px;
            border-radius: 4px;
        }

        [data-theme="matrix"] { --primary: #00ff00; --bg: #000; --accent: #0f0; }
        [data-theme="blossom"] { --primary: #ff69b4; --bg: #fff0f5; --text: #4a2c2c; --accent: #ff1493; }
        [data-theme="modern"] { --primary: #000; --bg: #fff; --text: #000; --accent: #888; }
        [data-theme="darkmode"] { --primary: #BB86FC; --bg: #121212; --text: #e0e0e0; --accent: #3700B3; }
        [data-theme="peach"] { --primary: #ff9f43; --bg: #fff5e6; --text: #4a403a; --accent: #ff7f00; }
        [data-theme="skyblue"] { --primary: #87CEEB; --bg: #f0f8ff; --text: #2c3e50; --accent: #00BFFF; }

        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            text-align: center;
            padding: 20px;
        }

        .button-wrapper {
            position: relative;
            margin: 20px;
        }

        button {
            background: rgba(var(--primary), 0.1);
            border: 2px solid var(--primary);
            color: var(--text);
            padding: 15px 30px;
            font-size: 1.2em;
            cursor: pointer;
            border-radius: 8px;
            transition: opacity 0.3s ease-out;
            backdrop-filter: blur(5px);
        }

        button:hover:not(.hidden) {
            background: rgba(var(--primary), 0.2);
            transform: scale(1.05);
            box-shadow: 0 0 15px var(--primary);
        }

        button.hidden {
            opacity: 0;
            pointer-events: none;
        }

        button:not(.hidden) {
            opacity: 1;
            transition: opacity 0.5s ease-in;
        }

        .spinner {
            position: absolute;
            top: 50%;
            left: 50%;
            width: 30px;
            height: 30px;
            margin: -15px 0 0 -15px;
            border: 4px solid var(--primary);
            border-top: 4px solid transparent;
            border-radius: 50%;
            animation: spin 2s linear infinite;
            opacity: 0;
            transition: opacity 0.3s ease-out;
        }

        .spinner.visible {
            opacity: 1;
            transition: opacity 0.3s ease-in;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        #result {
            font-size: 3em;
            margin: 20px;
            text-shadow: 0 0 10px var(--primary);
            opacity: 0;
            transition: opacity 0.5s;
        }

        .background-effect {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: -1;
        }

        .matrix-column {
            position: absolute;
            color: rgba(0, 255, 0, 0.3);
            font-size: 18px;
            writing-mode: vertical-rl;
            animation: matrixFall 15s linear infinite;
            left: calc(var(--pos) * 1%);
            animation-delay: calc(var(--delay) * -1s);
        }

        @keyframes matrixFall {
            from { transform: translateY(-100vh); }
            to { transform: translateY(100vh); }
        }

        .petal {
            position: absolute;
            font-size: 24px;
            animation: blossomFall linear infinite;
            animation-duration: calc(8s + (var(--rand) * 4s));
        }

        @keyframes blossomFall {
            0% { left: var(--start-left); top: -100px; transform: rotate(0deg); opacity: 1; }
            100% { left: calc(var(--start-left) + var(--drift)); top: 100vh; transform: rotate(720deg); opacity: 0; }
        }

        .modern-line {
            position: absolute;
            background: linear-gradient(to right, transparent, var(--primary), transparent);
            opacity: 0.4;
            animation: pulse 3s infinite ease-in-out;
        }

        .modern-line.horizontal {
            width: 100%;
            height: 1px;
            top: calc(var(--pos) * 10%);
        }

        .modern-line.vertical {
            width: 1px;
            height: 100%;
            left: calc(var(--pos) * 10%);
        }

        .modern-node {
            position: absolute;
            width: 6px;
            height: 6px;
            background: var(--accent);
            border-radius: 50%;
            top: calc(var(--y) * 10%);
            left: calc(var(--x) * 10%);
            box-shadow: 0 0 10px var(--primary);
            animation: nodePulse 2s infinite alternate;
        }

        .starmodern {
            position: absolute;
